# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
DEBUG=True

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost/dbname

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4.1-nano

# SERP API Configuration (for product search)
SERP_API_KEY=your-serp-api-key-here

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Playwright Configuration
HEADLESS_BROWSER=True
SCREENSHOT_DIR=./screenshots

# Application Settings
MAX_AUTOMATIC_PURCHASE_AMOUNT=100.00  # Maximum amount for automatic purchases without approval
MAX_RETRIES=3                         # Maximum retries for failed operations
USE_PROXY=False                       # Whether to use proxy for web requests
PROXY_URL=                            # Proxy URL if USE_PROXY is True

# Security Settings
ENCRYPTION_KEY=your-encryption-key    # Key for encrypting sensitive data
JWT_SECRET_KEY=your-jwt-secret-key    # Secret key for JWT token generation
JWT_ACCESS_TOKEN_EXPIRES=3600         # JWT token expiration time in seconds

# Email Configuration (for notifications)
MAIL_SERVER=smtp.example.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=your-email@example.com